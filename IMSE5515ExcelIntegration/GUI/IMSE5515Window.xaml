<Window x:Class="IMSE5515ExcelIntegration.IMSE5515Window"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" Height="234" Width="257" ResizeMode="NoResize" Title="IMSE5515 Loader">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FF4A6889" Offset="1" />
            <GradientStop Color="#FFE5E5E5" Offset="0.624" />
            <GradientStop Color="#FFD6DFE7" />
        </LinearGradientBrush>
    </Window.Background>
    <Grid Margin="0,0,2,0">
        <Label Content="DMC Start" HorizontalAlignment="Left" Height="26" Margin="10,10,0,0" VerticalAlignment="Top" Width="72"/>
        <TextBox HorizontalAlignment="Left" Height="26" Margin="118,10,0,0" Text="{Binding StartDMC}" VerticalAlignment="Top" Width="112"/>
        <Label Content="DMC End" HorizontalAlignment="Left" Height="26" Margin="10,41,0,0" VerticalAlignment="Top" Width="72"/>
        <TextBox HorizontalAlignment="Left" Height="26" Margin="118,41,0,0" Text="{Binding EndDMC}" VerticalAlignment="Top" Width="112"/>

        <Button Content="Validate" Margin="128,87,0,0" 
                Command="{Binding CheckDataCommand}" HorizontalAlignment="Left" Width="74" Height="22" VerticalAlignment="Top"/>
        
        <Label Content="Amount:" HorizontalAlignment="Left" Height="26" Margin="10,129,0,0" VerticalAlignment="Top" Width="72"/>
        <Label Content="{Binding Amount}" HorizontalAlignment="Left" Height="26" Margin="118,129,0,0" VerticalAlignment="Top" Width="72"/>
        
        <Button Content="Export to Excel" HorizontalAlignment="Left" Margin="120,160,0,0" VerticalAlignment="Top" 
                Width="90" Command="{Binding TakeDataCommand}"/>
    </Grid>
</Window>
